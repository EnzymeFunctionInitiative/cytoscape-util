Bootstrap: docker
From: ubuntu
Stage: build


%setup
    mkdir -p $SINGULARITY_ROOTFS/opt/cytoscape-util

#%files
#    /home/nils/cytoscape-singularity/cytoscape-util /opt

%post
    apt-get update
    apt-get install --no-install-recommends --yes python3 pip git libgd-perl locales language-pack-en openssl
    export LANGUAGE=en_US.UTF-8 && export LANG=en_US.UTF-8 && export LC_ALL=en_US.UTF-8
    locale-gen en_US
    locale-gen en_US.UTF-8
    update-locale LC_ALL=en_US.UTF-8
    pip install uuid pandas networkx requests python-igraph colorbrewer chardet decorator backoff colour
    #pip install py4cytoscape
    git clone --branch devel https://github.com/EnzymeFunctionInitiative/cytoscape-util.git /opt/cytoscape-util
    mkdir -p /opt/cytoscape-util/lib/py4cytoscape
    git clone https://github.com/nilsoberg/py4cytoscape /opt/cytoscape-util/lib/py4cytoscape
    chmod +x /opt/cytoscape-util/misc/crop_ssn_image.pl

%runscript
    # Uses dash
    if [ "$1" = "quit" ]
    then
        python3 /opt/cytoscape-util/ssn2image/ssn2image.py --quit --port $2 --host $3
    elif [ "$1" = "usage" ] || [ $# -lt 3 ]
    then
        echo 'Usage: singularity py4cytoscape.sif <ssn_path> <output_image_path> [<port> <host> <zoom>] [style verbose] [crop] [log_dir]'
    else
        args="--ssn $1 --image-base $2"
        if [ $# -gt 2 ]
        then
            args="$args --port $3"
        fi
        if [ $# -gt 3 ]
        then
            args="$args --host $4"
        fi
        if [ $# -gt 4 ] && [ $5 -gt 0 ]
        then
            args="$args --zoom $5"
        fi
        if [ $# -gt 5 ] && [ "$6" = "style" ]
        then
            args="$args --style"
        fi
        if [ $# -gt 6 ] && [ "$7" = "verbose" ]
        then
            args="$args --verbose"
        fi
        if [ $# -gt 7 ] && [ "$8" = "sandbox" ]
        then
            sandbox=`openssl rand -hex 8`
            args="$args --sandbox-id $sandbox"
        fi
        if [ $# -gt 8 ] && [ "$9" = "dontquit" ]
        then
            args="$args --dont-quit"
        fi

        if [ $# -gt 10 ]
        then
            export PY4CYTOSCAPE_DETAIL_LOGGER_DIR=$11
        fi
        echo "$args"
        python3 /opt/cytoscape-util/ssn2image/ssn2image.py $args

        if [ $# -gt 9 ] && [ "$10" = "crop" ]
        then
            if [ -f "$2" ]
            then
                /opt/cytoscape-util/misc/crop_ssn_image.pl $2 $2.crop
                mv $2 $2.bak
                mv $2.crop $2
            fi
        fi
    fi

